# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/roadfighter"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Whop API Configuration
WHOP_API_KEY="your_whop_api_key_here"
WHOP_APP_ID="your_whop_app_id_here"
WHOP_WEBHOOK_SECRET="your_whop_webhook_secret_here"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET="your_jwt_secret_here_use_strong_random_string"
JWT_EXPIRES_IN="7d"

# Game Configuration
DEFAULT_ENTRY_FEE=5.00
MIN_ENTRY_FEE=1.00
MAX_ENTRY_FEE=100.00
DAILY_TOKEN_COUNT=3
MAX_PLAYERS_PER_SESSION=8

# Payment Split Configuration (percentages)
DEVELOPER_SPLIT=25
CREATOR_SPLIT=25
WINNER_SPLIT=50

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true